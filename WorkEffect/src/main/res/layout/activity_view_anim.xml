<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.aispeech.aios.ui.view.RobotView
        android:id="@+id/r_robot_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/mic_bg"
        android:gravity="center"
        android:clickable="false">

        <ImageView
            android:id="@+id/i_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mic"/>

    </com.aispeech.aios.ui.view.RobotView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startListening"
            android:text="开始倾听"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stopListening"
            android:text="停止倾听"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startRecog"
            android:text="开始识别"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stopRecog"
            android:text="识别完成"/>

    </LinearLayout>

</RelativeLayout>
